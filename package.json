{
  "name": "typescriptwebpackmochatemplate",
  "version": "1.0.0",
  "description": "minimal typescript setup with webpack dev server and mocha & chai test setup",
  "scripts": {
    "build": "node ./node_modules/webpack/bin/webpack --config webpack.config.dev.js",
    "start": "webpack-dev-server --config webpack.config.dev.js --open",
    "test": "mocha -r ts-node/register -r ignore-styles test/**/*.spec.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.7",
    "@types/webpack": "^3.8.2",
    "chai": "^4.1.2",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "ignore-styles": "^5.0.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "nsp": "^3.1.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.22.1",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1",
    "webpack-cli":"^3.1.0",
    "webpack": "^4.16.5",
    "webpack-dev-server": "^3.1.5"
  },
  "keywords": [
    "typescript",
    "mocha",
    "webpack"
  ],
  "author": "Johannes Lindgren",
  "license": "GPL-3.0"
}
