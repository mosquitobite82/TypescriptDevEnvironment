{
  "name": "typescriptwebpackmochatemplate",
  "version": "1.0.0",
  "description": "minimal typescript setup with webpack dev server and mocha & chai test setup",
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "start": "webpack-dev-server --config webpack.config.dev.js --open",
    "test": "mocha -r ts-node/register -r ignore-styles src/**/*.test.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "@types/webpack": "^4.41.10",
    "chai": "^4.2.0",
    "css-loader": "^3.5.1",
    "html-webpack-plugin": "^4.2.0",
    "ignore-styles": "^5.0.1",
    "mocha": "^7.1.1",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "webpack-cli": "^3.3.11",
    "webpack": "^4.42.1",
    "webpack-dev-server": "^3.10.3"
  },
  "keywords": [
