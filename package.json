{
  "name": "typescriptwebpackmochatemplate",
  "version": "1.0.0",
  "description": "minimal typescript setup with webpack dev server and mocha & chai test setup",
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "start": "webpack serve --config webpack.config.dev.js --open",
    "test": "mocha --watch --watch-files src/**/*.ts -r ts-node/register -r ignore-styles src/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^15.14.9",
    "@types/webpack": "^5.28.0",
    "chai": "^4.3.7",
    "css-loader": "^5.2.7",
    "html-webpack-plugin": "^5.5.0",
    "ignore-styles": "^5.0.1",
    "mocha": "^10.2.0",
    "sass": "^1.57.1",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "keywords": [
    "typescript",
    "mocha",
    "webpack"
  ],
  "author": "Johannes Lindgren",
  "license": "The MIT License (MIT)"
}
